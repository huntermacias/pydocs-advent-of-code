{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Change to false to enable .js file generation for server code
    "esModuleInterop": true,
    "module": "commonjs", // Changed to commonjs for Node.js compatibility
    "moduleResolution": "node", // Changed for Node.js module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./build" // Output directory for compiled server files
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server/**/*.ts"
, "server/index.js", "resetSolvedProblems.js", "src/pages/concepts/[concept].jsx", "src/pages/api/codeContent/codeContent.js"  ],
  "exclude": ["node_modules", "build"]
}
